<idea-plugin>
  <id>dev.sasikanth.creator</id>
  <name>Mobius Creator</name>
  <vendor email="sasikanthmiriyampalli@gmail.com" url="https://sasikanth.dev">Sasikanth</vendor>

  <description><![CDATA[
    Plugin to generate mobius related classes.
    ]]></description>

  <idea-version since-build="192" />

  <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
       on how to target different products -->
  <depends>com.intellij.modules.lang</depends>
  <depends>org.jetbrains.kotlin</depends>
  <depends>org.jetbrains.android</depends>

  <extensions defaultExtensionNs="com.intellij">
    <!-- Add your extensions here -->
  </extensions>

  <actions>
    <!-- Add your actions here -->
    <action class="dev.sasikanth.creator.CreatorAction" description="Create mobius classes" id="dev.sasikanth.creator.CreatorAction" text="Mobius Creator">
      <add-to-group anchor="after" group-id="NewGroup" relative-to-action="NewDir" />
    </action>
  </actions>
</idea-plugin>